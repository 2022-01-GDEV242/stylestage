<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Generated from the 11ty Netlify Jumpstart: https://github.com/5t3ph/11ty-netlify-jumpstart -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    {% set styleDir %}{% if meta.environment == "production" %}public{% else %}src{% endif %}{% endset %}
    {% if page.url == '/' %}
    <title>{{ meta.siteName }} from Modern CSS Solutions</title>
    <meta name="description" content="{{ meta.siteDescription }}" />
    <link href="{{ '/styles/css/main-stage.css' | url }}" rel="stylesheet" />
    {% else %}
    <title>{{ style.title }} by {{ style.author }} | Style Stage</title>
    {% if style.description %}
    <meta name="description" content="{{ style.description }}" />
    {% endif %}
    {% set cssFile %}{{styleDir}}/styles/css/{{ style.title | slug }}.css{% endset %}
    {% set css %} {% include cssFile %} {% endset %}
    <style>
      {{ css | safe }}
    </style>
    <link rel="canonical" href="{{ meta.url }}" />
    {% endif %}
    <link rel="icon" href="{{ '/favicon.png' | url }}" />

    <meta name="twitter:card" content="summary_large_image" />
    {% if style.twitter %}
    <meta name="twitter:creator" content="@{{ style.twitter }}" />
    {% endif %}
    <meta
      name="twitter:title"
      content="{% if style.title %}{{ style.title }}{% else %}{{ meta.siteName }}{% endif %}"
    />
    <meta
      name="twitter:description"
      content="{% if style.description %}{{ style.description }}{% else %}{{
        meta.siteDescription
      }}{% endif %}"
    />
    <meta
      name="og:title"
      content="{% if style.title %}{{ style.title }}{% else %}{{ meta.siteName }}{% endif %}"
    />
    <meta
      name="og:description"
      content="{% if style.description %}{{ style.description }}{% else %}{{
        meta.siteDescription
      }}{% endif %}"
    />
    <meta property="og:image" content="{{ meta.url }}/previews/{{ title | slug }}.png" />
    <meta name="twitter:image" content="{{ meta.url }}/previews/{{ title | slug }}.png" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="RSS Feed for {{ meta.siteName }}"
      href="{{ '/feed/' | url }}"
    />
  </head>
  <body>
    {% include 'html.njk' %}
  </body>
</html>
