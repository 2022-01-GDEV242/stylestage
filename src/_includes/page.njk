<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Generated from the 11ty Netlify Jumpstart: https://github.com/5t3ph/11ty-netlify-jumpstart -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{ title }} | {{ meta.siteName }}</title>
    <meta name="description" content="{{ description }}" />
    <link href="{{ '/styles/css/main-stage.css' | url }}" rel="stylesheet" />
    {%- if page.url == '/styles/' %}
    <link href="{{ '/styles/css/showcase.css' | url }}" rel="stylesheet" />
    {% endif -%}
    <link rel="icon" href="{{ '/favicon.png' | url }}" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="RSS Feed for {{ meta.siteName }}"
      href="/feed/"
    />
    {% if 'stylestage' in meta.url %}
    <link rel="preconnect" href="https://plausible.io">
    <link rel="dns-prefetch" href="https://plausible.io">
    <script async defer data-domain="stylestage.dev" src="https://plausible.io/js/plausible.outbound-links.js"></script>
    <script>window.plausible = window.plausible || function() { (window.plausible.q = window.plausible.q || []).push(arguments) }</script>
    {% endif %}

    <style>
    header {
      padding-bottom: 0;
      min-height: unset;
    }
    main {
      padding-bottom: 10vh;
    }
    {% if page.url == '/guidelines/' or page.url == '/thanks/' or page.url == '/subscribe/' %}
    article p:first-of-type {
      font-size: var(--font-size-h4);
      text-align: center;
      align-self: stretch;
    }
    {% endif %}
    {% if page.url == '/thanks/' %}
    article p, article h3 {
      text-align: center; 
      width: 100%;
    }
    article h3 { 
      width: 100%;
    }
    {% endif %}
    {% if page.url === '/subscribe/' %}
    form {
      display: grid;
      grid-gap: 1rem;
      align-self: center;
      margin-top: 2rem;
    }
    form div {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
    }
    form label {
      width: 6ch;
      font-family: inherit;
      font-size: var(--font-size-h4);
      font-weight: var(--font-weight-strong);
    }
    form input {
      border: 2px solid var(--color-primary);
      padding: .5rem 1rem;
      font-size: 1.125rem;
      color: inherit;
      min-width: 300px;
      width: 100%;
      transition: 180ms box-shadow ease-in;
    }
    form input:focus {
      box-shadow: 0.3em 0.3em var(--color-secondary);
    }
    form button {
      cursor: pointer;
      margin-top: 1rem;
    }
    {% endif %}
    {% if page.url === '/resources/' %}
    main h2 {
      background-color: unset;
      color: var(--color-primary);
    }
    a.link {
      margin-left: auto;
      margin-right: auto;
    }
    main li strong:first-child {
      color: var(--color-secondary);
    }
    main li {
      list-style-type: 'üëâ';
      padding-left: 1ch;
    }
    main li:nth-child(even) {
      list-style-type: 'üëâüèø';
      padding-left: 1ch;
    }
    {% endif %}
    </style>
  </head>
  <body class="page">
    <a href="main" class="skip-link">Skip to main content</a>
    {% include "nav.njk" %}
    <header>
      <div class="container">
        <h1>{{ title }}</h1>
      </div>
    </header>
    {% if page.url == '/styles/' %}
    {% include "features.njk" %}
    {% endif %}
    <main id="main">
      <div class="container">
        <article>
          <section class="container">
            {{ content | safe }}
            {% if page.url === '/subscribe/' %}
            {% include "subscribe.njk" %}
            {% endif %}
          </section>
        </article>
      </div>
    </main>
    {% if page.url !== '/styles/' and page.url !== '/support/' and page.url !== '/resources/' %}
    {% include "features.njk" %}
    {% endif %}
    {% include "footer.njk" %}
    {% include 'sponsor-footer.njk' %}
    {% if page.url == '/styles/' %}
    <script>
    const styleLinks = document.querySelectorAll('.features a');
    styleLinks.forEach(function(link) {
      link.addEventListener('click', function(e) {
      {% if 'stylestage' in meta.url %}
        e.preventDefault();
        plausible('Choose Style', {
          props: { Style: link.innerText },
        });
        setTimeout(function() {
          window.location = link.href;
        }, 150);
      {% endif %}
      })
    });
    </script>
    {% endif %}
  </body>
</html>
